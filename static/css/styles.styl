@import "nib"
@import "fonts.styl"
.u-title    
  border-bottom 2px dashed #00CCFF
  color #00CCFF
  display block
  font-weight normal
  font-size 1.5em
  padding-bottom .5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1E1E1E
  box-shadow 0px 2px 4px #000
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin 0 .5em
.Flip-container  
  perspective 1000  
  :hover
    transform: rotateY(180deg)
  .flipper
    border 1px solid #ddd
    transition 0.5s
    transform-style preserve-3d
    position relative
  .front, 
  .back
    backface-visibility hidden
    position absolute
    top 0
    left 0
   .flipper,
   .front,
   .back
    width 256px
    height 150px
  .front  
    transform rotateY(0deg)
  .back
    transform rotateY(180deg)  
.Header
  margin-top 3.75em
  background-image url('../images/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &-button
    background white
    border none
    border-radius 50%
    display none
    height 40px
    line-height 40px
    outline 0
    position fixed
    right 1em
    text-align center
    top .6em
    width 40px
    z-index 3
    &.is-active
      display block
.Header-imageContainer
  margin 0
.Header-image
  border 5px solid white
  border-radius 50%

.Header-name,
.Header-link
  color white
.Header-link
  font-size 1.5em
  font-weight 400
  margin 0  
.Header-name
  font-size 2.2em  
  font-weight bold
  margin 0  
  text-decoration none
  text-shadow 1px 1px 2px #000
.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  border-radius 2em
  color white
  margin-right .5em
  padding .5em 1em
  text-decoration none
  display inline-block
  margin-bottom: 1em
    &.twitter
      background #55ACEE
    &.facebook
      background #4862A3
    &.github
      background #829AA8
    &:before 
      margin-right: .5em  

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around  
.Work-item
  display inline-block  
  margin-bottom 1.8em
.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic
  
.Footer  
  background-color #0EC3DE
  background-repeat no-repeat
  background-position center  
  image('../images/footer.jpg', w=1200px, h=350px)
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 1em
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  border-radius 1em
  border none
  color white
  padding .5em 1em

@media screen and (max-width: 480px)
  .Profile
    &-link
      display block
      
@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      width: 90%
      box-sizing: border-box
  .Header
    margin-top 0
  .MainMenu
    background red
    height auto
    left -200px
    width 200px
    transition .2s
    &.is-active
        left 0
    &-item    
      display block